loalang.xyz {
    tls {
        dns cloudflare
    }

    reverse_proxy / {
        to www
        transport http {
            read_buffer 4096
        }
    }
}

api.loalang.xyz {
    tls {
        dns cloudflare
    }

    reverse_proxy / {
        to api
        transport http {
            read_buffer 4096
        }
    }
}